<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 text-center">
            <h1>View / Edit Profile</h1>
            <hr />
        </div>
    </div>
    <%= form_tag({action: :open_profile}, multipart: true, id: "open-form") do %>
        <div class="row">
            <h3 class="col-xs-12 text-center">Upload a profile to get started!</h3>
        </div>
        <div class="row well">
            <div class="col-xs-6 col-xs-offset-3">
                <div class="row">
                    <div class="col-xs-12">
                        <%= file_field_tag :profile, class: "form-control", id: "profile-field" %>
                    </div>
                </div>
                <div class="row text-center">
                    <br/>
                    <div class="col-xs-12">
                        <span id="open-btn" class="btn btn-success">Open Profile</span>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
<script type="text/javascript">
    $("#open-btn").click(function() {
        if ($("#profile-field").val()) {
            $("#open-form").submit();
        }
    });
</script>
